#!/usr/bin/env python

##
#   The main UCVM script. This script provides the command line interface
#   through which the user can submit and launch commands to the backend.

from ucvm.api.strings import get_string
from ucvm.server import server
from ucvm.commands import query
import getopt
import sys

def usage():
    print(get_string(6))
    return

def main():
    # Check the options. We will act on them later.  
    print("HERE") 
    try:
        opts, args = getopt.getopt(sys.argv[1:], "q:", ["server", "query", "log"])
        print(opts)
        for o, a in opts:
            if o in ("--server"):
                server.start_server()
           	elif o in ("--query"):
           		query.cmd_query()
    except getopt.GetoptError:
        usage()
        
    return

if __name__ == "__main__":
    main()